<% if user.errors.any? %>
    <div>
    <% user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>  
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span>&times;</span></button>
      </div>
      <% end %>
    </div>
<% end %>